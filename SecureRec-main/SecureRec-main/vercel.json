{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "installCommand": "npm install --legacy-peer-deps"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://secure-rec-backend.vercel.app/api/$1"
    },
    {
      "src": "/users/(.*)",
      "dest": "https://secure-rec-backend.vercel.app/users/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}