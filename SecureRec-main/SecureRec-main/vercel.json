{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "installCommand": "npm install --force"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://secure-rec-backend.vercel.app/api/$1"
    },
    {
      "src": "/users/(.*)",
      "dest": "https://secure-rec-backend.vercel.app/users/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "build": {
    "env": {
      "NODE_VERSION": "18.12.1",
      "NPM_VERSION": "8.19.2"
    }
  }
}