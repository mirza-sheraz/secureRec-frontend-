{
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "build",
          "installCommand": "npm install --legacy-peer-deps"
        }
      }
    ],
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "https://secure-rec-backend.vercel.app/api/$1"
      },
      {
        "source": "/users/(.*)",
        "destination": "https://secure-rec-backend.vercel.app/users/$1"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/index.html"
      }
    ]
  }  